
datasource db {
  provider = "mysql"
  url      = env("PRODUCT_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/product"
}

model Category {
  id        String     @id @default(cuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  products  Product[]
  weightDiscounts CategoryWeightDiscount[]
}

model Product {
  id          String     @id @default(cuid())
  code        String     @unique
  name        String
  description String?  @db.Text
  price       Float
  regularPrice Float?
  length      Float?
  breadth     Float?
  height      Float?
  weight      Float?
  packingWeight Float?
  tax         Int
  hsnsac      String?
  mainImage   String?
  images      Json?
  inStock     Boolean    @default(true)
  approved    Boolean
  webVisible  Boolean    @default(true)
  stockCount  Int?
  vegetable   Boolean    @default(false)
  veg         Boolean    @default(false)
  frozen      Boolean    @default(false)
  
  // Timestamps and audit fields
  createdAt   DateTime   @default(now())
  createdBy   String
  updatedAt   DateTime   @updatedAt
  updatedBy   String
  approvedAt  DateTime?
  approvedBy  String?

  // Relations
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id])
  discountPrices ProductDiscountPrice[]
  weightDiscounts ProductWeightDiscount[]
  nutrition   ProductNutrition[]
}

model CategoryWeightDiscount {
  id         String   @id @default(cuid())
  minWeight  Float    // in kg
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  productDiscounts ProductDiscountPrice[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ProductDiscountPrice {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  discountId    String
  discount      CategoryWeightDiscount @relation(fields: [discountId], references: [id])
  discountPrice Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([productId, discountId])
}

model ProductWeightDiscount {
  id         String   @id @default(cuid())
  productId  String
  minWeight  Float    // Minimum weight in kg to qualify for this discount
  price      Float    // New price per unit when this weight is reached
  product    Product  @relation(fields: [productId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
}

model ProductNutrition {
  id         String   @id @default(cuid())
  productId  String
  name       String   // Nutrition name (e.g., "Protein", "Carbohydrates", "Fat")
  grams      Float    // Weight in grams
  product    Product  @relation(fields: [productId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([productId])
}